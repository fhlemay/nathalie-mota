{% extends 'base.twig' %}

{% block content %}

<!-- Hero -->
<section class="relative md:-mx-[12.5%]">

    <div class="w-dvw max-w-[1440px] relative">
        <img src="{{ hero_image_url }}" alt="{{ hero_image_alt }}" class="w-full h-auto">
        <h1 class="uppercase text-hero font-bold font-spacemono italic text-outline text-center
                   w-full absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
            {{ site.description }}
        </h1>
    </div>

</section>


<!-- Filter -->
<search>
    <div class="flex flex-col items-center py-7 gap-2 md:justify-between md:flex-row md:pt-20 md:pb-10">
        <div class="flex flex-col gap-2 md:flex-row md:gap-9">
            <select name="categories" id="categories-select"
                class="w-64 px-[18px] py-[11px] rounded-lg bg-transparent border border-mota-mid-grey font-poppins uppercase">
                <option disabled class="h-5"></option> {# dummy first option for whitespace #}
                <option value="" disabled selected class="hidden">Catégories</option>
                <option value="1" class="uppercase">Test</option>
            </select>
            <select name="formats" id="formats-select"
                class="w-64 px-[18px] py-[11px] rounded-lg bg-transparent border border-mota-mid-grey font-poppins uppercase">
                <option disabled class="h-5"></option> {# dummy first option for whitespace #}
                <option value="" disabled selected class="hidden">Formats</option>
            </select>
        </div>
        <select name="ordre" id="ordre-select"
            class="w-64 px-[18px] py-[11px] rounded-lg bg-transparent border border-mota-mid-grey font-poppins uppercase">
            <option disabled class="h-5"></option> {# dummy first option for whitespace #}
            <option value="" selected class="hidden">Trier à partir</option>
            <option value="old" class="uppercase">des plus anciennes</option>
            <option value="new">des plus récentes</option>
        </select>
    </div>
</search>

<!-- Photos grid -->
<section class="mx-auto w-5/6 md:w-full">

    {% include '/components/photo-grid.twig' with {'photos': tmp_photos} %}

</section>

{% endblock %}
