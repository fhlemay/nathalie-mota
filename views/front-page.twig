{% extends 'base.twig' %}

{% block content %}

<!-- Hero -->
<section class="relative md:-mx-[12.5%]">

    <div class="w-dvw max-w-[1440px] relative">
        <img src="{{ hero_image_url }}" alt="{{ hero_image_alt }}" class="w-full h-auto">
        <h1 class="uppercase text-hero font-bold font-spacemono italic text-outline text-center
                   w-full absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
            {{ site.description }}
        </h1>
    </div>

</section>


<!-- Filter -->
<search>

    <div class="flex flex-col items-center py-7 gap-2 md:justify-between md:flex-row md:pt-20 md:pb-10">

        <div class="flex flex-col gap-2 md:flex-row md:gap-9">

            {% include '/components/filter-dropdown.twig' with {'items': categories, 'default_label': 'catégorie'} %}

            {% include '/components/filter-dropdown.twig' with {'items': formats, 'default_label': 'formats'} %}

        </div>

        {% include '/components/filter-dropdown.twig' with 
            {
                'items': 
                    [
                        {'name': 'des plus anciennes', 'slug': 'old'},
                        {'name': 'des plus récentes', 'slug': 'new'}
                    ],
                'default_label': 'Trier à partir'
            }
        %}

    </div>
</search>

<!-- Photos grid -->
<section class="mx-auto w-5/6 md:w-full">

    {% include '/components/photo-grid.twig' with {'photos': initial_set_photos, 'page': 1} %}

    {% include '/components/load-more-button.twig' %}


</section>

{% endblock %}
