<div class="font-spacemono font-regular text-sm tracking-widest uppercase flex flex-col gap-5">
    <h1 class="text-5xl italic tracking-normal w-28 [word-break: keep-all] [white-space: normal]">
        {{ photo.title}}
    </h1>
    <p>Référence : {{ photo.meta('reference') }}</p>
    <p>Catégorie :
        {% for term in photo.terms('categorie') %}
        {{ term }}
        {% endfor%}
    </p>
    <p>Format :
        {% for term in photo.terms('format') %}
        {{ term }}
        {% endfor%}
    </p>
    <p>Type : {{ photo.meta('type') }}</p>
    <p>Année : {{ photo.date('Y') }} </p>
</div>
