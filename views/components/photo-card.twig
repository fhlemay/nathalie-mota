<!-- Photo Container -->
<div class="relative aspect-square w-full md:w-1/2 overflow-hidden group"
    x-data="{ overlay: false, showLightbox: false }">

    <!-- Photo -->
    <img src="{{ post.thumbnail.src }}" alt="" class="w-full h-full object-cover">

    <!-- Overlay -->
    <div x-show="overlay" @mouseenter="overlay = true; console.log('Lightbox state:', showLightbox)"
        @mouseleave="overlay = false"
        class="absolute inset-0 bg-black bg-opacity-50 flex justify-center items-center gap-4 transition-opacity duration-300 opacity-0 group-hover:opacity-100">

        <!-- Eye Icon -->
        <button @click="showLightbox = true" title="More Info">
            <img src="{{ theme.link }}/assets/img/Icon_eye.svg" alt="Eye Icon" class="w-8 h-8">
        </button>

        <!-- Full-Screen Icon -->
        <button @click="showLightbox = true" title="Open in Lightbox">
            <img src="{{ theme.link }}/assets/img/Icon_fullscreen.svg" alt="Full-Screen Icon" class="w-8 h-8">
        </button>
    </div>

    <!-- Lightbox -->
    <div x-show="showLightbox" @click.outside="showLightbox = false"
        class="fixed inset-0 bg-black bg-opacity-75 justify-center items-center p-4">
        <img src="{{ post.thumbnail.src }}" alt="Your Photo in Lightbox" class="max-w-full max-h-full object-contain">
        <button @click="showLightbox = false" class="absolute top-4 right-4 text-white text-4xl">✖️</button>
    </div>
</div>
