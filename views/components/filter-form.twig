<!-- Filter form -->
<form id="filter-form"
    hx-get="{{ site.url }}/wp-json/nathalie-mota/v1/photos"
    hx-target="#photo-grid"
    hx-swap="innerHTML" 
    hx-trigger="form-input-state-has-changed from:form"
    class="flex flex-col items-center py-7 gap-2 md:justify-between md:flex-row md:pt-20 md:py-0">
    <div class="flex flex-col gap-2 md:flex-row md:gap-9">

        {% include '/components/filter-dropdown.twig' with {'slug': 'categorie', 'items': categories, 'default_label':
        'catégorie'} %}

        {% include '/components/filter-dropdown.twig' with {'slug': 'format', 'items': formats, 'default_label':
        'format'} %}

    </div>

    {% include '/components/filter-dropdown.twig' with
    {
        'slug': 'order',
        'items':
            [
                {'name': 'anciennes'},
                {'name': 'récentes'}
            ],
        'default_label': 'Trier par les plus'
    }
    %}
</form>
